<library>
  <repositories>
    <repository>
      <path>{{ modm_path }}</path>
    </repository>
  </repositories>
  <options>
    <option name="modm:build:project.name">taproot</option>
    <option name="modm:build:openocd.cfg">openocd.cfg</option>
    <option name="modm:build:scons:include_sconstruct">False</option>
    <option name="modm:target">{{ mcu }}</option>

{% for o in modm_hal_options %}    {{ o }}{% endfor %}
  </options>
  <modules>
{% for m in shared_modm_modules %}    <module>modm:{{ m }}</module>
{% endfor %}
{% for m in unique_modm_modules %}    <module>modm:{{ m }}</module>
{% endfor %}
  </modules>
</library>
